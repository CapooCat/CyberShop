
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CyberShop.Models.SignUpViewModel
<section class="container" style="padding-top: 160px; padding-bottom: 50px;">
    <h3><i class="fas fa-user-plus" style="margin-right: 10px"></i>Đăng ký</h3>
    <ul class="breadcrumb Page-address">
        <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home" style="margin-right: 10px"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Đăng ký</li>
    </ul>

    <div class="login col-md-12">
        <h1>Đăng ký</h1>
        <div class="error" id="Post_Error">
            <ul>
                @Html.ValidationSummary(false, "", "alert alert-danger")
            </ul>
        </div>
        <form method="post" action="/Home/SignUp">
            <h6>
                @Html.TextBoxFor(model => model.Name, new { @type = "text", @placeholder = "Họ tên...", @name = "search", })
            </h6>
            <h6>
                @Html.TextBoxFor(model => model.Email, new { @type = "text", @placeholder = "Email...", @name = "search", })
            </h6>
            <h6>
                @Html.TextBoxFor(model => model.Username, new { @type = "text", @placeholder = "Tên người dùng...", @name = "search", })
            </h6>
            <h6>
                @Html.TextBoxFor(model => model.Password, new { @type = "password", @placeholder = "Mật khẩu...", @name = "search", })
            </h6>
            <h6>
                @Html.TextBoxFor(model => model.Re_Password, new { @type = "password", @placeholder = "Nhập lại mật khẩu...", @name = "search", })
            </h6>
            <h6>
                <button type="submit">Đăng ký</button>
            </h6>
         </form>
            <h6 class="re-check">
                <a href="/Home/Login">Đăng nhập</a>
            </h6>
</div>

</section>
@section scripts{
    <script>
        var x = document.getElementById("Post_Error");
        var list = x.getElementsByTagName("UL")[0];
        if (list.getElementsByTagName("LI")[0].innerHTML != "") {
            x.style.display = 'inline-block';
        } else {
            x.style.display = 'none';
        }
    </script>
}
