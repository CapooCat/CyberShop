@model CyberShop.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container" style="padding-top: 160px; padding-bottom: 50px;">
    <h3><i class="fas fa-user-circle" style="margin-right: 10px"></i>Đăng nhập</h3>
    <ul class="breadcrumb Page-address">
        <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home" style="margin-right: 10px"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Đăng nhập</li>
    </ul>

    <div class="login col-md-12">
        <h1>Đăng nhập</h1>
        <div class="error" id="Post_Error">
            <ul>
                @Html.ValidationSummary(false, "", "alert alert-danger")
            </ul>
        </div>
        <form method="post" action="/Home/Login">
            <h6>
                @Html.TextBoxFor(model => model.Username, new { @type = "text", @placeholder = "Tài khoản...", @name = "search", })
            </h6>
            <h6>
                @Html.TextBoxFor(model => model.Password, new { @type = "password", @placeholder = "Mật khẩu...", @name = "search", })
            </h6>
            <h6>
                <button type="submit" >Đăng nhập</button>
            </h6>
        </form>
        <button class="second-btn" onclick="location.href = '/Home/SignUp';">Đăng ký</button>
        <h6 class="re-check">
            <a href="#">quên mật khẩu ?</a>
        </h6>
        @*<hr />
        <br />
            <a class="facebook-btn" href="/Home/LoginFacebook">
                <i class="fa fa-facebook"></i>Đăng nhập với Facebook
            </a>*@
    </div>

    @section scripts{
        <script>
        var x = document.getElementById("Post_Error");
        var list = x.getElementsByTagName("UL")[0];
        if (list.getElementsByTagName("LI")[0].innerHTML != "") {
            x.style.display = 'inline-block';
        } else {
            x.style.display = 'none';
        }
        </script>
    }
</section>

