@model List<CyberShop.Models.DetailProductViewModel>

@{
    ViewBag.Title = "Build PC";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Session.Add(CyberShop.Common.CommonConstantUser.URL_REFERRER, Request.Url);
}

<section class="container" style="padding-top: 160px; padding-bottom: 50px;">
    <h3><i class="fas fa-bars" style="margin-right: 10px"></i>Tự build PC</h3>
    <ul class="breadcrumb Page-address">
        <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home" style="margin-right: 10px"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Tự build PC</li>
    </ul>
    <div class="PC-header"><button ng-click="ResetPcPart()"><i class="fas fa-undo" style="margin-right: 5px;"></i>Reset</button><span style="float: right;">Chi phí dự tính: {{TotalPrice | currency:"":0}}đ</span></div>
    <a href="/Build/" id="rsPage" hidden></a>
    <div class="row" style="border-top: 3px solid #1E90FF;border-bottom: 3px solid #1E90FF;border-radius:10px;overflow:hidden">
        

        <div class="col-md-3 PC-Title">Mainboard - Bo mạch chủ</div>
        <div class="col-md-9 PC-Info" id="mainSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(2)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn Mainboard</button></div>
        <div class="col-md-9 PC-Item" id="mainItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{MainImage}}">
            <div class="Info">
                {{MainName}}
                <p class="Price">Giá tiền: {{MainPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(MainId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">CPU - Vi xử lý</div>
        <div class="col-md-9 PC-Info" id="cpuSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(3)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn CPU</button></div>
        <div class="col-md-9 PC-Item" id="cpuItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{CPUImage}}">
            <div class="Info">
                {{CPUName}}
                <p class="Price">Giá tiền: {{CPUPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(CPUId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">RAM - Bộ nhớ trong</div>
        <div class="col-md-9 PC-Info" id="ramSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(5)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn RAM</button></div>
        <div class="col-md-9 PC-Item" id="ramItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{RamImage}}">
            <div class="Info">
                {{RamName}}
                <p class="Price">Giá tiền: {{RamPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(RamId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">SSD - ổ cứng thể rắn</div>
        <div class="col-md-9 PC-Info" id="ssdSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(9)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn SSD</button></div>
        <div class="col-md-9 PC-Item" id="ssdItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" src="{{SSDImage}}">
            <div class="Info">
                {{SSDName}}
                <p class="Price">Giá tiền: {{SSDPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(SSDId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">HDD - ổ cứng PC</div>
        <div class="col-md-9 PC-Info" id="hddSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(8)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn HDD</button></div>
        <div class="col-md-9 PC-Item" id="hddItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{HDDImage}}">
            <div class="Info">
                {{HDDName}}
                <p class="Price">Giá tiền: {{HDDPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(HDDId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">PSU - Nguồn PC</div>
        <div class="col-md-9 PC-Info" id="psuSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(4)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn PSU</button></div>
        <div class="col-md-9 PC-Item" id="psuItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" src="{{PSUImage}}">
            <div class="Info">
                {{PSUName}}
                <p class="Price">Giá tiền: {{PSUPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(PSUId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">VGA - Card màn hình</div>
        <div class="col-md-9 PC-Info" id="vgaSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(1)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn VGA</button></div>
        <div class="col-md-9 PC-Item" id="vgaItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" src="{{VGAImage}}">
            <div class="Info">
                {{VGAName}}
                <p class="Price">Giá tiền: {{VGAPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(VGAId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">Case - Vỏ thùng máy</div>
        <div class="col-md-9 PC-Info" id="caseSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(6)"><i class="fas fa-plus" style="margin-right: 5px;" ></i>Chọn Case</button></div>
        <div class="col-md-9 PC-Item" id="caseItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{CaseImage}}">
            <div class="Info">
                {{CaseName}}
                <p class="Price">Giá tiền: {{CasePrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(CaseId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">Màn hình</div>
        <div class="col-md-9 PC-Info" id="monitorSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(12)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn màn hình</button></div>
        <div class="col-md-9 PC-Item" id="monitorItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{MonitorImage}}">
            <div class="Info">
                {{MonitorName}}
                <p class="Price">Giá tiền: {{MonitorPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(MonitorId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>

        <div class="col-md-3 PC-Title">Tản nhiệt</div>
        <div class="col-md-9 PC-Info" id="coolSelect"><button data-toggle="modal" data-target="#Modal" ng-click="SelectPcPart(7)"><i class="fas fa-plus" style="margin-right: 5px;"></i>Chọn Tản nhiệt</button></div>
        <div class="col-md-9 PC-Item" id="coolItem" hidden>
            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{CoolerImage}}">
            <div class="Info">
                {{CoolerName}}
                <p class="Price">Giá tiền: {{CoolerPrice | currency:"":0}} VNĐ</p>
                <p>Số lượng: 1</p>
                <div><button class="delete" ng-click="DeletePcPart(CoolerId)"><i class="fas fa-trash"></i></button></div>
            </div>
        </div>
    </div>

    <div class="PC-footer"><button ng-click="AddAllToCart()"><i class="fas fa-shopping-cart" style="margin-right: 5px;"></i>Thêm vào giỏ hàng</button></div>

    <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Chọn {{TypeName}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="search">
                        <input @*id="Search"*@ placeholder="Tìm kiếm..." type="text" ng-model="search.ProductName">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                    <div style="margin-top:20px;overflow: scroll;height:475px;">
                        <div class="PC-Part" ng-repeat="item in PcPartLst | filter:search">
                            <img style="max-width: 150px;max-height:150px;float: left" ng-src="{{item.Image}}">
                            <div class="Info">
                                {{item.ProductName}}
                                <p class="Price">{{item.Price | currency:"":0}}</p>
                                <p>{{item.Amount}}</p>
                            </div>
                            <button class="add" data-dismiss="modal" ng-click="AddToBuildPC(item.id)">Chọn</button>
                        </div>
                    </div>         
                </div>
        </div>
    </div>
        </div>

</section>
@section scripts{
<script type="text/javascript">
    PC = document.getElementById("PC");
    PC.style.display = "none";
</script>
    }

