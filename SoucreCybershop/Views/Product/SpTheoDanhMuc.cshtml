@section scripts{
<script>
        var x = document.getElementsByClassName("clickDo");

        for (var i = 0; i < x.length; i++) {
            x[i].addEventListener("click", function () {
                for (var j = 0; j < x.length; j++)
                    x[j].className = "clickDo";
                this.className += " active";
            });
        }
</script>
}