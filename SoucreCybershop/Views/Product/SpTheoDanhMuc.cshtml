@model List<CyberShop.Models.ProductCategoryViewModel>
@{
    ViewBag.Title = "Sản phẩm Cybershop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Session.Add(CyberShop.Common.CommonConstantUser.URL_REFERRER, Request.Url);
}
<!-- List sản phẩm -->

<section class="container" style="padding-top: 160px; padding-bottom: 50px;">
    <h3><i class="fas fa-bars" style="margin-right: 10px"></i>Tất cả sản phẩm</h3>
    <ul class="breadcrumb Page-address">
        <li class="breadcrumb-item"><a href="#"><i class="fas fa-home" style="margin-right: 10px"></i>Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Linh kiện PC</a></li>
        <li class="breadcrumb-item active">Tất cả sản phẩm</li>
    </ul>
    <div class="sort">
        <button class="active">Giá tăng dần</button>
        <button>Giá giảm dần</button>
        <button>A -> Z</button>
        <button>Z -> A</button>
        <button>Mới nhất</button>
        <button>Cũ nhất</button>
    </div>

    <div class="row">
        @if (Model.Count()==0)
        {
            <div style="text-align:center; padding:150px;width: 100%;">
                <p>Không tìm thấy sản phẩm nào khớp với lựa chọn của bạn</p>
                </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-md-3 card">
                    <div class="box">
                        <a href="/Home/DetailProduct/@item.id">
                            <img class="card-img" src="@item.Image">
                            <h6>@item.ProductName</h6>
                            <p class="price-tag">@string.Format("{0:#,##0}", @item.Price)đ</p>
                            <p class="status">Tình trạng: còn hàng</p>
                        </a>
                        <button class="Add"><i class="fas fa-shopping-cart" style="margin-right: 10px"></i>Thêm vào giỏ</button>
                    </div>
                </div>
            }
        }

    </div>

    <div class="pagination col-md-12">
        <a href="#"><i class="fas fa-angle-double-left"></i></a>
        <a href="#"><i class="fas fa-angle-left"></i></a>
        <a href="#" class="active">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>
        <a href="#">6</a>
        <a href="#"><i class="fas fa-angle-right"></i></a>
        <a href="#"><i class="fas fa-angle-double-right"></i></a>
    </div>
</section>

