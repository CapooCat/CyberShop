@model List<Data.Product>
@{
    ViewBag.Title = "Sản phẩm Cybershop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Session.Add(CyberShop.Common.CommonConstantUser.URL_REFERRER,Request.Url);
}
<!-- List sản phẩm -->

<section class="container" style="padding-top: 160px; padding-bottom: 50px;">
    <h3><i class="fas fa-bars" style="margin-right: 10px"></i>Tất cả sản phẩm</h3>
    <ul class="breadcrumb Page-address">
        <li class="breadcrumb-item"><a href="#"><i class="fas fa-home" style="margin-right: 10px"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Tất cả sản phẩm</li>
    </ul>
    <div class="sort">
        <button  ng-click="SortBy(1); Reload()" class="clickDo active">Giá tăng dần</button>
        <button  ng-click="SortBy(2); Reload()" class="clickDo">Giá giảm dần</button>
        <button  ng-click="SortBy(3); Reload()" class="clickDo">A -> Z</button>
        <button  ng-click="SortBy(4); Reload()" class="clickDo">Z -> A</button>
        <button  ng-click="SortBy(5); Reload()" class="clickDo">Mới đến cũ</button>
        <button  ng-click="SortBy(6); Reload()" class="clickDo">Cũ đến mới</button>
    </div>

    <div>
        <div class="row">
            <div class="col-md-3 card" ng-repeat="item in data">
                <div class="box">
                    <a href="/Home/DetailProduct/{{item.id}}">
                        <input type="hidden" value="{{item.id}}"/>
                        <img class="card-img" ng-src="{{ item.Image }}">
                        <h6>{{ item.ProductName }}</h6>
                      <p class="price-tag">{{ item.Price | currency:"":0 }}đ</p>
                        <p class="status">Tình trạng: còn hàng</p>
                    </a>
                        <button type="button" ng-click="AddItem(item.id)" class="Add" data-loading-text="<i class='fa fa-circle-notch fa-spin'></i>"><i class="fas fa-shopping-cart" style="margin-right: 10px"></i>Thêm vào giỏ</button>
                </div>
             </div>
        </div>
    </div>
