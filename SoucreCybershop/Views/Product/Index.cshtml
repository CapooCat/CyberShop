@section scripts{
    <script>
        var app = angular.module('MyApp', [])
        app.controller('MyController', function ($scope, $http) {
            $http.get("/Product/SanPham").then(function (res, status, xhr) {
                $scope.data = res.data;
            });
            $scope.FetchCart=function()
            {
                $http.get("/Cart/ReturnCartItem").then(function (response) {
                    $scope.cartList = response.data;
                });
            }
            $scope.bucket = { total_amount: 0 };
            $scope.FetchCart();
            $scope.AddItem = function (id) {
                $http.get("/Cart/AddItem/" + id).then(function (response) {
                    $scope.FetchCart();
                });
            }
            $scope.sortBy = '+Price';
        });
        
        var x = document.getElementsByClassName("clickDo");

        for (var i = 0; i < x.length; i++) {
            x[i].addEventListener("click", function () {
                for (var j = 0; j < x.length; j++)
                    x[j].className = "clickDo";
                this.className += " active";
            });
        }
    </script>
}