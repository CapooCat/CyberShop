</section>

@section scripts{
    <script>
        var app = angular.module('MyApp', [])
        app.controller('MyController', function ($scope, $http) {
            $http.get("/Product/SanPham").then(function (res, status, xhr) {
                $scope.data = res.data;
            });
        });
    </script>
}