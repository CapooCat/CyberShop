
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var prdTypeList = new ProductTypeDao().ListProductType();
    var brandList = new BrandDao().ListBrand();
}
@using Data;


<section id="content" class="admin-content-container">
    <h3 style="margin: 20px;border-bottom: 1px solid #DCDCDC;padding-bottom: 16px;"><i class="fas fa-clipboard-list" style="margin-right: 10px;"></i>Quản lý hóa đơn</h3>
    <div class="row" style="margin: 5px;">
        <div class="col-md-12 row product-input" style="padding-top: 10px;padding-bottom: 10px; text-align: center;">
            <div class="col-md-2">
                <p>Mã hóa đơn:</p>
                <input type="text" placeholder="Nhập mã hóa đơn..." id="invoice_id">
            </div>
            <div class="col-md-2">
                <p>Thời gian từ:</p>
                <input type="date" id="date_from">
            </div>
            <div class="col-md-2">
                <p>Thời gian đến:</p>
                <input type="date" id="date_to">
            </div>
            <div class="col-md-2">
                <p>Tên khách hàng:</p>
                <input type="text" placeholder="Nhập tên khách hàng..." id="customer_name">
            </div>
            <div class="col-md-2">
                <p>Số điện thoại:</p>
                <input type="text" placeholder="Nhập số điện thoại..." id="customer_phone">
            </div>
            <div class="col-md-12">

            </div>
        </div>

        <div class="col-md-12 product-action" style="padding-top: 10px;padding-bottom: 10px; text-align: left;">
            <button type="button" data-toggle="modal" data-target="#warningModal" class="delete"><i class="fas fa-trash"></i></button>
            <button style="width: 100px;" ng-click="FilterInvoice()" onclick="UnCheck()">Lọc</button>
        </div>
        <div class="col-md-12" style="padding-top: 10px;padding-bottom: 10px;">
            <div class="Box" style="padding: 0;">
                <div class="chart-title" style="height: 55px;">Danh sách hóa đơn</div>
                <div class="progress-container">
                    <div class="progress-bar" id="myBar"></div>
                </div>
                <div class="admin-table" id="admin-table-best-sale" style="height: 500px;">
                    <table>
                        <thead>
                            <tr>
                                <th style="width: 3%;" class="checkbox"><input type="checkbox" id="check-all" onchange="Check()"></th>
                                <th style="width: 7%;"><a href="#" ng-click="sortByInvoice('Id')">Mã hóa đơn</a></th>
                                <th style="width: 15%;"><a href="#" ng-click="sortByInvoice('CustomerName')" >Tên khách hàng</a></th>
                                <th style="width: 28%;"><a href="#" ng-click="sortByInvoice('DeliveryAddress')">Địa chỉ</a></th>
                                <th style="width: 10%;"><a href="#" ng-click="sortByInvoice('DeliveryPhoneNum')">Số điện thoại</a></th>
                                <th style="width: 10%;"><a href="#" ng-click="sortByInvoice('PurchaseDate')">Ngày xuất</a></th>
                                <th style="width: 12%;"><a href="#" ng-click="sortByInvoice('Status')">Tình trạng</a></th>
                                <th style="width: 15%;"><a href="#" >Hoạt động</a></th>
                            </tr>
                        </thead>
                        <tbody id="items-table">
                            <tr ng-repeat="item in invoiceList">
                                <td class="checkbox"><input type="checkbox" onchange="CheckItem()"></td>
                                <td>{{item.Id}}</td>
                                <td>{{item.CustomerName}}</td>
                                <td>{{item.DeliveryAddress}}</td>
                                <td>{{item.DeliveryPhoneNum}}</td>
                                <td>{{item.PurchaseDate.slice(6, -2) | date:'dd/MM/yyyy'}}</td>
                                <td>{{item.Status}}</td>
                                <td class="table-product-action"><button data-toggle="modal" data-target="#EditInvoice" ng-click="EditInvoice(item.Id)"><i class="fas fa-edit"></i></button><button class="delete" data-toggle="modal" data-target="#warningModal"><i class="fas fa-trash"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
    <div class="modal fade" id="EditInvoice" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Sửa hóa đơn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row product-input" style="padding-top: 10px;padding-bottom: 10px; text-align: center;">
                        <div class="col-md-3">
                            <p>Họ tên khách hàng:</p>
                            <input type="text" placeholder="Nhập Họ tên..." id="client_name" ng-value="clientName">
                        </div>
                        <div class="col-md-3" style="text-align: left;">
                            <p>Số điện thoại</p>
                            <input type="text" placeholder="hãng số điện thoại..." id="phone_number" ng-value="phoneNumber">
                        </div>
                        <div class="col-md-6">
                            <p>Địa chỉ:</p>
                            <input type="text" placeholder="Nhập địa chỉ..." id="address" ng-value="address">
                        </div>
                        <div class="col-md-12" style="margin-top: 10px;font-size: 20px;border-bottom: 1px solid #DCDCDC; padding-bottom: 10px;margin-bottom: 15px;">Quản lý sản phẩm hóa đơn</div>

                        <div class="col-md-12" style="text-align: center;">
                            <button onclick="ShowProduct()"><i class="fas fa-plus" style="margin-right: 10px;border-bottom: 1px"></i>Thêm</button>
                            <div class="Dropdown-Product-Background" id="Product-Background"></div>
                            <div class="Dropdown-Product" id="Product">
                                <a href="#" class="exit" onclick="HideProduct()"><i class="fas fa-times"></i></a>
                                <div class="row product-input" style="padding-top: 10px;padding-bottom: 10px; text-align: center;">
                                <div class="col-md-4">
                                    <p>Tìm kiếm sản phẩm:</p>
                                    <input type="text" placeholder="Nhập từ khóa..." ng-model="search.ProductName">
                                </div>
                                <div class="col-md-4">
                                    <p>Lọc theo loại sản phẩm:</p>
                                    <select class="list-select" ng-model="search.ProductTypeName">
                                        <option value="">Chọn loại sản phẩm</option>
                                        @foreach (var item in prdTypeList)
                                        {
                                            <option value="@item.TypeName">@item.TypeName</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                        <p>Lọc theo hãng:</p>
                                        <select class="list-select" ng-model="search.BrandName">
                                            <option value="">Chọn hãng sản phẩm</option>
                                            @foreach (var item in brandList)
                                            {
                                                <option value="@item.BrandName">@item.BrandName</option>
                                            }
                                        </select>
                                </div>
                                <div class="col-md-12" style="padding-top: 10px;padding-bottom: 10px;">
                                    <p>Danh sách sản phẩm:</p>
                                    <div class="Box" style="padding: 0;margin-top: 10px;">
                                        <div class="admin-table modal-table" id="admin-table-best-sale" style="height: 320px;">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th style="width: 40%;"><a href="#">Tên sản phẩm</a></th>
                                                        <th style="width: 10%;"><a href="#">Loại SP</a></th>
                                                        <th style="width: 10%;"><a href="#">Hãng SP</a></th>
                                                        <th style="width: 15%;"><a href="#">SL hàng tồn</a></th>
                                                        <th style="width: 10%;"><a href="#">Bảo hành</a></th>
                                                        <th style="width: 20%;"><a href="#">Giá tiền</a></th>
                                                        <th style="width: 5%;text-align: center;"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in productList | filter:search">
                                                        <td>{{item.ProductName}}</td>
                                                        <td>{{item.ProductTypeName}}</td>
                                                        <td>{{item.BrandName}}</td>
                                                        <td>{{item.Amount}}</td>
                                                        <td>{{item.MonthWarranty}}</td>
                                                        <td>{{item.Price | currency:"":0}}</td>
                                                        <td style="text-align: center;"><a href="#" ng-click="AddProductToInvoice(item.id, item.Price)"><i class="fas fa-plus"></i></a></td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="col-md-12" style="padding-top: 10px;padding-bottom: 10px;">
                            <p>Danh sách sản phẩm trong hóa đơn:</p>
                            <div class="Box" style="padding: 0;margin-top: 10px;">
                                <div class="admin-table modal-table" id="admin-table-best-sale" style="height: 325px;">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th style="width: 45%;"><a href="#">Tên sản phẩm</a></th>
                                                <th style="width: 10%;"><a href="#">Số lượng</a></th>
                                                <th style="width: 20%;"><a href="#">Giá tiền (VNĐ)</a></th>
                                                <th style="width: 15%;text-align: center;"><a href="#">Hoạt động</a></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in listInvoiceDetail" ng-init="bucket.total_price = bucket.total_price+ (item.Price * item.Amount)">
                                                <td>{{item.ProductName}}</td>
                                                <td>{{item.Amount}}</td>
                                                <td>{{item.Price | currency:"":0}}</td>
                                                <td style="text-align: center;"><a href="#" ng-click="DeleteDetailProduct(item.Id)"><i class="fas fa-times"></i></a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="float: right;">Tổng tiền: {{bucket.total_price | currency:"":0}}</div>
                </div>
                <div class="modal-footer">
                    <button type="button">Sửa</button>
                    <button type="button" class="second-btn" data-dismiss="modal">Thoát</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Cảnh báo !!!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn chắc chắn muốn xóa chứ ?
                </div>
                <div class="modal-footer">
                    <button type="button">Xóa</button>
                    <button type="button" class="second-btn" data-dismiss="modal">Thoát</button>
                </div>
            </div>
        </div>
    </div>

</section>

<script>
    Active = document.getElementById("InvoiceManager");
    Active.className = "active-button"

    CheckAll = document.getElementById("check-all");
    table = document.getElementById("items-table");
    ItemCheckBox = table.getElementsByTagName("input");
    Product = document.getElementById("Product");
    ProductBackground = document.getElementById("Product-Background");


    function UnCheck() {
        CheckAll.checked = false;
        Check();
    }

    function Check() {
        if (CheckAll.checked == true) {
            for (i = 0; ItemCheckBox.length > i; i++) {
                if (ItemCheckBox[i].type == 'checkbox')
                    ItemCheckBox[i].checked = true;
            }
        } else {
            for (i = 0; ItemCheckBox.length > i; i++) {
                if (ItemCheckBox[i].type == 'checkbox')
                    ItemCheckBox[i].checked = false;
            }
        }
    }

    function CheckItem() {
        n = 0;
        for (i = 0; ItemCheckBox.length > i; i++) {
            if (ItemCheckBox[i].type == 'checkbox')
                if (ItemCheckBox[i].checked == false) {
                    CheckAll.checked = false;
                    n = n + 1;
                } else if (n == 0) {
                    CheckAll.checked = true;
                }
        }
    }

    function ShowProduct() {
        ProductBackground.style.visibility = "visible";
        Product.style.visibility = "visible";
    }

    function HideProduct() {
        ProductBackground.style.visibility = "hidden";
        Product.style.visibility = "hidden";
    }
</script>

